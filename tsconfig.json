{
  "ts-node": {
    "transpileOnly": true
  },
  "compilerOptions": {
    "target": "ES2021",
    "lib": ["es2021"],
    "module": "CommonJS",
    "rootDir": "src",
    "typeRoots": ["./node_modules/@types", "src/types"],
    "types": [],
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "skipLibCheck": true
  },
  "exclude": ["scripts", "test", "build", "node_modules", "gulpfile.js"]
}
